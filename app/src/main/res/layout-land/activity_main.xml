<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pregunta_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/verdadero_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verdadero_btn_text"/>

        <Button
            android:id="@+id/falso_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falso_btn_text"/>
    </LinearLayout>

    <Button
        android:id="@+id/siguiente_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/siguiente_text"
        android:layout_gravity="bottom|right"
        android:drawableRight="@drawable/ic_chevron_right_24dp"
        android:drawablePadding="4dp"
        />

</FrameLayout>